<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    
    <!-- ConfiguraciÃ³n del servlet de registro -->
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>RegistroServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PublicarProductoServlet</servlet-name>
        <servlet-class>PublicarProductoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PublicarProductoServlet</servlet-name>
        <url-pattern>/PublicarProductoServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditarProductoServlet</servlet-name>
        <servlet-class>EditarProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarProductoServlet</servlet-name>
        <url-pattern>/EditarProductoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <servlet-class>EliminarProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <url-pattern>/EliminarProductoServlet</url-pattern>
    </servlet-mapping>
    

</web-app>